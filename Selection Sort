#include<stdio.h>

int main()
{
   int i, j, n, temp, data[25];
   printf("=========> Program Selection Sort <=========\n\n");

   printf("Berapa banyak data yang ingin dimasukkan?: ");
   scanf("%d",&n);

   printf("Masukkan %d data: \n", n);
   for(i=0;i<n;i++)
      scanf("%d",&data[i]);

   for(i=0;i<n;i++){
      for(j=i+1;j<n;j++){
         if(data[i]>data[j]){
            temp=data[i];
            data[i]=data[j];
            data[j]=temp;
         }
      }
   }

   printf("Menampilkan data yang diurutkan : \n");
   for(i=0;i<n;i++)
      printf("%d\n",data[i]);

   return 0;
}

#Penjelasan
